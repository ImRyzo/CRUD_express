<%- include('../partials/__head') %>
<div class="container">
    <h2>Tambah Produk Baru</h2>
    <div class="row">
        <div class="col-md-6">
            <form action="/produk/store" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="nama_produk">Nama Produk:</label>
                    <input type="text" class="form-control" id="nama_produk" name="nama_produk" required>
                </div>
                <div class="form-group">
                    <label for="harga_produk">Harga:</label>
                    <input type="text" class="form-control" id="harga_produk" name="harga_produk" required>
                </div>
                <div class="form-group">
                    <label for="id_kategori">Kategori:</label>
                    <select class="form-control" id="id_kategori" name="id_kategori" required>
                        <option value="">Pilih Kategori</option>
                        <% kategori.forEach(kat => { %>
                            <option value="<%= kat.id_kategori %>"><%= kat.nama_kategori %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="gambar_produk">Gambar Produk:</label>
                    <input type="file" class="form-control-file" id="gambar_produk" name="gambar_produk" accept="image/*">
                </div>
                <button type="submit" class="btn btn-primary">Simpan</button>
                <a href="/produk" class="btn btn-secondary">Batal</a>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/__foot') %>