<%- include('../partials/__head') %>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Edit Produk</h2>
            <form action="/produk/update/<%= data.id_produk %>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="nama_produk">Nama Produk</label>
                    <input type="text" class="form-control" id="nama_produk" name="nama_produk" value="<%= data.nama_produk %>">
                </div>
                <div class="form-group">
                    <label for="harga_produk">Harga Produk</label>
                    <input type="text" class="form-control" id="harga_produk" name="harga_produk" value="<%= data.harga_produk %>">
                </div>
                <div class="form-group">
                    <label for="id_kategori">Kategori</label>
                    <select class="form-control" id="id_kategori" name="id_kategori">
                        <% kategori.forEach(cat => { %>
                            <option value="<%= cat.id_kategori %>" <%= (cat.id_kategori == data.id_kategori) ? 'selected' : '' %>><%= cat.nama_kategori %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="gambar_produk">Gambar Produk</label>
                    <input type="file" class="form-control-file" id="gambar_produk" name="gambar_produk" accept="image/*">
                    <% if(data.gambar_produk) { %>
                        <img src="/images/produk/<%= data.gambar_produk %>" alt="Gambar Produk" style="max-width: 100px;">
                    <% } %>
                </div>
                <button type="submit" class="btn btn-primary">Simpan</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/__foot') %>
